#include <iostream>
#include <stack>
using namespace std;

int main() {
    stack<int> s;

    // Push elements
    s.push(10);
    s.push(20);
    s.push(30);

    // Display top element
    cout << "Top element: " << s.top() << endl;  // 30

    // Pop element
    s.pop();

    cout << "Top after pop: " << s.top() << endl;  // 20

    // Display all elements
    cout << "Stack (top â†’ bottom): ";
    while (!s.empty()) {
        cout << s.top() << " ";
        s.pop();
    }
    cout << endl;

    return 0;
}
